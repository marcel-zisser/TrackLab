{
  "name": "tracklab-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/tracklab-api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "migrate-db": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma migrate reset",
        "args": [
          "--force --schema=apps/tracklab-api/prisma/schema.prisma"
        ]
      }
    },
    "init-db": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx ts-node init-db/init-db"
      },
      "dependsOn": [
        "migrate-db"
      ]
    },
    "generate-prisma": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma generate",
        "args": [
          "--schema=apps/tracklab-api/prisma/schema.prisma"
        ]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "generate-proto",
        "init-db"
      ],
      "options": {
        "assets": [
          {
            "input": "libs/proto/src",
            "glob": "**/*.proto",
            "output": "proto"
          }
        ],
        "command": "webpack-cli build",
        "args": [
          "node-env=production"
        ]
      },
      "configurations": {
        "development": {
          "args": [
            "node-env=development"
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": [
        "build"
      ],
      "options": {
        "buildTarget": "tracklab-api:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "tracklab-api:build:development"
        },
        "production": {
          "buildTarget": "tracklab-api:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "generate-proto": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/generate-ts-proto.js",
        "parallel": false
      }
    }
  }
}
